<div class="cont">
    <div class="login">
        <form action="/admin/login" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" id="exampleInputUser" placeholder="Usuario" name="usuario">
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="exampleInputPassword" placeholder="Contraseña" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
        {{#if error}}
            <p>Usuario y/o Contraseña incorrectos</p>
        {{/if}}
    </div>
</div>