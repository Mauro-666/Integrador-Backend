<div class="contenedor">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end" style="color: blue;">Hola {{persona}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i class="bi bi-box-arrow-right"></i></a></p>
    </div>
        {{!-- fila 2 --}}
    <div class="tabla">
        <div class="row">
            <div class="col-7 text-start" >
                <h3>Listado de Usuarios</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
            </div>
        </div>
        {{!-- fila 3 --}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">Producto</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Imagen</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                            <tr>
                                <th scope="row">{{producto}}</th>
                                <td>{{descripcion}}</td>
                                <td>{{precio}}</td>
                                <td>{{{imagen}}}</td>
                                <td class="text-end">
                                    <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"> <i class="bi bi-pencil-fill" aria-hidden="true"></i></a>
                                    <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"> <i class="bi bi-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    