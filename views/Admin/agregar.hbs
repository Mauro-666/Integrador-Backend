<div class="container">
    <div class="row">
        <div class="col-15">
            <h4>Nuevo Usuario</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Producto" name="producto"/>
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Descripcion" name="descripcion"/>
                </div>
                
                <div class="form-group">
                    <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
                </div>

                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="precio" name="precio"/>
                </div>
                
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>